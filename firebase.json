{
  "emulators": {
    "auth": {
      "port": 11190
    },
    "firestore": {
      "port": 11180
    },
    "ui": {
      "enabled": true,
      "port": 11140
    },
    "hosting": {
      "port": 11150
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/images/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2592000,public,immutable"
          }
        ]
      },
      {
        "source": "/static/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000,public,immutable"
          }
        ]
      },
      {
        "source": "/locales/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600,public,must-revalidate"
          }
        ]
      }
    ]
  }
}
